{
  "name": "furni-store-monorepo",
  "version": "1.0.0",
  "description": "FurniStore - E-commerce platform with React frontend and Node.js backend",
  "private": true,
  "workspaces": [
    "furni-store",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd furni-store && npm run dev",
    "dev:backend": "cd server && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd furni-store && npm run build",
    "build:backend": "cd server && npm install",
    "start": "cd server && npm start",
    "install:all": "npm install && cd furni-store && npm install && cd ../server && npm install",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd furni-store && npm test",
    "test:backend": "cd server && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mananp1/furti_store.git"
  },
  "keywords": [
    "ecommerce",
    "furniture",
    "react",
    "nodejs",
    "mongodb",
    "stripe"
  ],
  "author": "Manan Patel",
  "license": "MIT"
}
